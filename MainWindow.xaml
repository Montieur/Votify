<Window x:Class="VotifyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VotifyTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="446">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="spokenText" Grid.Row="0" FontSize="30">
            wtf
        </TextBox>
        <ComboBox x:Name="voicesBox" Grid.Row="1" FontSize="30"/>
        <Button Click="Button_Click" Grid.Row="2" FontSize="30" Content="gadaj"/>
        <Button x:Name="popupButton" Click="popupButton_Click" Grid.Row="3" FontSize="30" Content="łokienko"/>
    </Grid>

</Window>